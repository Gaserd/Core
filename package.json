{
    "name": "@debut/community-core",
    "version": "2.4.3-beta.4",
    "publishConfig": {
        "access": "public"
    },
    "description": "Javascript Multibroker Trading System",
    "main": "lib/index.js",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "compile": "tsc",
        "build": "rollup -c && chmod -R +x ./lib/cli/**.js",
        "start": "ts-node --",
        "prettier": "prettier --config './.prettierrc' --write 'src/**/*.ts'",
        "version": "npm run build",
        "test": "jest",
        "bench": "npm start ./tools/bench.ts",
        "postversion": "git push && git push --tags"
    },
    "author": "Dmitry Yurov",
    "license": "Apache-2.0",
    "bin": {
        "tester": "lib/cli/tester.js",
        "finder": "lib/cli/finder.js",
        "genetic": "lib/cli/genetic.js"
    },
    "dependencies": {
        "@debut/plugin-utils": "^1.0.14",
        "@master-chief/alpaca": "^6.2.4",
        "@tinkoff/invest-openapi-js-sdk": "^1.5.0",
        "async-genetic": "^1.4.2",
        "binance-api-node": "0.10.49",
        "cli-progress": "^3.9.0",
        "node-fetch": "^2.6.1",
        "@types/ws": "^7.4.7"
    },
    "devDependencies": {
        "@debut/types": "^1.0.24",
        "@types/benchmark": "^2.1.1",
        "@types/cli-progress": "^3.9.2",
        "@types/jest": "^26.0.24",
        "@types/node": "^16.4.1",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "benchmark": "^2.1.4",
        "eslint": "^7.31.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "git-format-staged": "^2.1.2",
        "husky": "4.3.8",
        "jest": "^27.0.6",
        "prettier": "^2.3.2",
        "rollup": "^2.53.3",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.30.0",
        "ts-jest": "^27.0.4",
        "typescript": "^4.3.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "git-format-staged -f 'prettier --stdin --stdin-filepath \"{}\"' '*.ts' '*.json'"
        }
    }
}
