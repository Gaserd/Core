{
    "name": "@debut/community-core",
    "version": "2.2.7",
    "publishConfig": {
        "access": "public"
    },
    "description": "Javascript Multibroker Trading System",
    "main": "lib/index.js",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "compile": "tsc",
        "build": "rollup -c && chmod -R +x ./lib/cli/**.js",
        "start": "ts-node --",
        "prettier": "prettier --config './.prettierrc.js' --write 'src/**/*.ts'",
        "version": "npm run build",
        "test": "jest",
        "bench": "npm start ./tools/bench.ts",
        "postversion": "git push && git push --tags"
    },
    "author": "Dmitry Yurov",
    "license": "Apache-2.0",
    "bin": {
        "tester": "lib/cli/tester.js",
        "finder": "lib/cli/finder.js",
        "genetic": "lib/cli/genetic.js"
    },
    "dependencies": {
        "@debut/plugin-utils": "^1.0.2",
        "@tinkoff/invest-openapi-js-sdk": "^1.2.16",
        "async-genetic": "^1.3.8",
        "binance-api-node": "^0.10.28",
        "node-fetch": "^2.6.1"
    },
    "devDependencies": {
        "@debut/types": "^1.0.1",
        "@types/benchmark": "^2.1.0",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.6.4",
        "@types/ws": "^7.2.6",
        "@typescript-eslint/eslint-plugin": "^4.0.1",
        "@typescript-eslint/parser": "^4.0.1",
        "benchmark": "^2.1.4",
        "eslint": "^7.8.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "git-format-staged": "^2.1.0",
        "husky": "^4.2.5",
        "jest": "^26.6.3",
        "prettier": "^2.1.1",
        "rollup": "^2.36.1",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.29.0",
        "ts-jest": "^26.5.0",
        "typescript": "^4.0.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "git-format-staged -f 'prettier --stdin --stdin-filepath \"{}\"' '*.ts' '*.json'"
        }
    }
}
